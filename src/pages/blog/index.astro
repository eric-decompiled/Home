---
import BaseLayout from '../../layouts/BaseLayout.astro';
import BlogCard from '../../components/BlogCard.astro';
import { getCollection } from 'astro:content';

const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort(
  (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout title="Blog" description="Articles about DSP, audio programming, and web audio.">
  <div class="app-header">
    <h1>Blog</h1>
    <p class="subtitle">Articles about DSP, audio programming, and web audio</p>
  </div>

  <section class="section">
    {sortedPosts.length > 0 ? (
      <div class="blog-grid">
        {sortedPosts.map(post => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            publishDate={post.data.publishDate}
            slug={post.slug}
            tags={post.data.tags}
          />
        ))}
      </div>
    ) : (
      <p style="color: var(--text-secondary);">No posts yet. Check back soon!</p>
    )}
  </section>
</BaseLayout>
